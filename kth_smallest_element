#include<iostream>
#include<queue>
using namespace std;
int getkthSmallest(int arr[] , int k , int n){
    priority_queue<int>pq;
    for(int i=0;i<k;i++){
      pq.push(arr[i]);
    }
    for(int i=k;i<n;i++){
        if(arr[i]<pq.top()){
            pq.pop();
            pq.push(arr[i]);
        }
    }
    return pq.top();

}
int main(){
  int arr[] = {3,5,4,6,9,8,7};
  int n = 7;
  int k = 3;
  int answer = getkthSmallest(arr,k,n);
  cout<<answer<<endl;
  
}
